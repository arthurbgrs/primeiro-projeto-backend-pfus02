<!-- Cabecalho principal  -->
<%- include('../partials/header') %>

<!-- Conteudo do index  -->
<main class="container d-flex flex-column flex-fill justify-content-center">
  <h1 class="text-center">PÁGINA DE EDITAR USUÁRIOS</h1>

  <!-- CRIANDO O FORMULÁRIO PARA ENVIO DAS INFORMAÇÕES  -->
  <form action="/usuarios/<%= usuario.id %>" method="POST">
    <div class="mb-3">
      <!-- Caixinha de nome de usuário  -->
      <label for="inputNome" class="form-label fs-2 mt-2">
        Nome de usuário
      </label>
      <input
        type="text"
        id="inputNome"
        class="form-control form-control-lg"
        placeholder="Digite o nome de usuário"
        name="usuario"
        required
        value=<%= usuario.usuario %>  
        />
      <!-- Fim de caixinha nome de usuário -->

      <!-- Caixinha de email  -->
      <label for="inputEmail" class="form-label fs-2 mt-2"> Email </label>
      <input
        type="email"
        id="inputEmail"
        class="form-control form-control-lg"
        placeholder="Digite o email"
        name="email"
        required
        value= <%= usuario.email %>
      />
      <!-- Fim de caixinha email -->

      <!-- Caixinha de senha  -->
      <label for="inputSenha" class="form-label fs-2 mt-2"> Senha </label>
      <input
        type="password"
        id="inputSenha"
        class="form-control form-control-lg"
        placeholder="Digite a senha"
        name="senha"
        required
        value=<%= usuario.senha %>
      />
      <!-- Fim de caixinha senha -->

      <!-- Caixinha de tipo  -->
      <label class="form-label fs-2 mt-2"> Tipo de usuário </label>
      <select name="tipo" class="form-select form-select-lg mb-3" >
        <option value="Funcionário" <%= usuario.tipo === "Funcionário" ? "select" : "" %>> Funcionário </option>
        <option value="Gerente" <%= usuario.tipo === "Gerente" ? "select" : "" %>> Gerente </option>
        <option value="Administrador" <%= usuario.tipo === "Administrador" ? "select" : "" %>> Administrador </option>
      </select>
      <!-- Fim de caixinha tipo -->

      <!-- Botão pra envio do formulário  -->
      <button type="submit" class="btn btn-lg btn-primary">
        Editar
      </button>
    </div>
  </form>
</main>

<!-- Rodape de todas as páginas  -->
<%- include('../partials/footer') %>